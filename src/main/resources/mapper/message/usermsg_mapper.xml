<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd"
>
<mapper namespace="com.sulbazi.message.UserMsgDAO">

	<!-- 개인 채팅방 입장시 해당 방 메세지 -->
	<select id="msg" resultType="com.sulbazi.message.UserMsgDTO">
		SELECT * FROM usermsg WHERE userchat_idx = #{idx}
	</select>
	
	<!-- 개인 채팅방 메세지들의 주인 닉네임 찾기 -->
	<select id="getUserById" resultType="com.sulbazi.member.UserDTO">
	 	SELECT user_nickname FROM user WHERE user_id = #{messageUserId}
	</select>
	
</mapper>